<section class="jumbotron text-center">
  <div class="container">

    <%# If there is an alert to display: %>
    <% if alert %>
      <div class="alert alert-danger" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <% if notice %>
      <div class="alert alert-primary" role="notice">
        <%= notice %>
      </div>
    <% end %>

    <h1 class="jumbotron-heading">Users view</h1>

    <%# If User is logged in: %>
    <% if current_user %>
      <p class="lead text-muted">
        Take a look at galleries by other awesome users.
      </p>

    <%# If User is not logged in: %>
    <% else %>
      <p class="lead text-muted">
        All these people are sharing their memories.
        <br>Why not <a href="<%= signup_path %>">sign up</a> and join them?
      </p>
    <% end %>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">

      <% @users.each do |user| %>

        <div class="col-md-3">
          <div class="card mb-3 shadow-sm">
            <a href="<%= user_path(user) %>">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>TODO: Replace with random gallery thumbnail</title><rect width="100%" height="100%" fill="#55595c"/><text x="10%" y="15%" fill="#eceeef" dy=".3em"><%= user.username %></text></svg>
            </a>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>
